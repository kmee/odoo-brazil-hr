<openerp>
<data>
    <record id="hr_contract_change_jornada_form" model="ir.ui.view">
        <field name="name">hr.contract.change.form (jornada)</field>
        <field name="model">hr.contract.change</field>
        <field name="inherit_id" ref="hr_contract_change_form"/>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string" eval="Alterações contratuais: Jornada"/>
            </form>
            <field name="change_reason_id" position="before">
                <field name="schedule_pay" attrs="{'readonly': [('state', '=', 'applied')],
                                                   'invisible': [('change_type', '!=', 'jornada')]}"/>
            </field>
            <field name="change_date" position="after">
                <field name="working_hours" attrs="{'readonly': [('state', '=', 'applied')],
                                                    'invisible': [('change_type', '!=', 'jornada')]}"/>
                <field name="monthly_hours" attrs="{'readonly': [('state', '=', 'applied')],
                                                    'invisible': [('change_type', '!=', 'jornada')]}"/>
                <field name="weekly_hours" attrs="{'readonly': [('state', '=', 'applied')],
                                                   'invisible': [('change_type', '!=', 'jornada')]}"/>
            </field>
        </field>
     </record>

     <record id="hr_contract_change_jornada_tree" model="ir.ui.view">
            <field name="name">hr.contract.change.tree (jornada)</field>
            <field name="model">hr.contract.change</field>
            <field name="arch" type="xml">
                <tree string="Alterações contratuais: Jornada">
                    <field name="contract_id" required="True"/>
                    <field name="change_date"/>
                    <field name="change_reason_id"/>
                    <field name="working_hours"/>
                    <field name="schedule_pay"/>
                    <field name="monthly_hours"/>
                    <field name="weekly_hours"/>
                </tree>
            </field>
     </record>

    <!--TODO: Definir contexto -->
    <record model="ir.actions.act_window" id="hr_contract_change_jornada_action">
        <field name="name">Jornada</field>
        <field name="res_model">hr.contract.change</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('change_type','=','jornada')]</field>
        <field name="context">{'search_default_current':1, 'default_change_type': 'jornada'}</field>
    </record>

    <record model="ir.ui.menu" id="hr_contract_change_jornada_menu">
        <field name="name">Jornada</field>
        <field name="parent_id" ref="hr_contract_change_menu"/>
        <field name="action" ref="hr_contract_change_jornada_action"/>
        <field name="sequence" eval="2"/>
    </record>
    
    <record model="ir.actions.act_window.view" id="hr_contract_change_jornada_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="hr_contract_change_jornada_action"/>
        <field name="view_id" ref="hr_contract_change_jornada_tree"/>
    </record>
    <record model="ir.actions.act_window.view" id="hr_contract_change_jornada_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="hr_contract_change_jornada_action"/>
        <field name="view_id" ref="hr_contract_change_jornada_form"/>
    </record>

</data>
</openerp>
