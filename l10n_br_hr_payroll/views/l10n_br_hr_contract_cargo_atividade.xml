<?xml version="1.0" encoding="utf-8"?>

<openerp>
<data>

    <record id="hr_contract_change_cargo_atividade_form" model="ir.ui.view">
        <field name="name">hr.contract.change.form (cargo/atividade)</field>
        <field name="model">hr.contract.change</field>
        <field name="inherit_id" ref="hr_contract_change_form"/>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string" eval="Alterações contratuais: Cargo/Atividade"/>
            </form>
            <field name="change_reason_id" position="before">
                <field name="labor_bond_type_id" attrs="{'readonly': [('state', '=', 'applied')],
                                                         'invisible': [('change_type', '!=', 'cargo-atividade')]}"/>
                <field name="labor_regime_id" attrs="{'readonly': [('state', '=', 'applied')],
                                                      'invisible': [('change_type', '!=', 'cargo-atividade')]}"/>
            </field>
            <field name="change_date" position="after">
                <field name="job_id" attrs="{'readonly': [('state', '=', 'applied')],
                                             'invisible': [('change_type', '!=', 'cargo-atividade')]}"/>
                <field name="admission_type_id" attrs="{'readonly': [('state', '=', 'applied')],
                                                        'invisible': [('change_type', '!=', 'cargo-atividade')]}"/>
                <field name="type_id" attrs="{'readonly': [('state', '=', 'applied')],
                                              'invisible': [('change_type', '!=', 'cargo-atividade')]}"/>
            </field>
        </field>
    </record>

    <record id="hr_contract_change_cargo_atividade_tree" model="ir.ui.view">
        <field name="name">hr.contract.change.tree (cargo/atividade)</field>
        <field name="model">hr.contract.change</field>
        <field name="arch" type="xml">
            <tree string="Alterações contratuais: Cargo/Atividade">
                <field name="contract_id" required="True"/>
                <field name="change_date"/>
                <field name="change_reason_id"/>
                <field name="job_id"/>
                <field name="type_id"/>
                <field name="admission_type_id"/>
                <field name="labor_bond_type_id"/>
                <field name="labor_regime_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hr_contract_change_cargo_atividade_action">
        <field name="name">Cargo/Atividade</field>
        <field name="res_model">hr.contract.change</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('change_type','=','cargo-atividade')]</field>
        <field name="context">{'search_default_current':1, 'default_change_type': 'cargo-atividade'}</field>
    </record>

    <record model="ir.ui.menu" id="l10n_br_hr_contract_change_cargo_atividade_menu">
        <field name="name">Cargo/Atividade</field>
        <field name="parent_id" ref="hr_contract_change_menu"/>
        <field name="action" ref="hr_contract_change_cargo_atividade_action"/>
        <field name="sequence" eval="3"/>
    </record>

    <record model="ir.actions.act_window.view" id="hr_contract_change_cargo_atividade_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="hr_contract_change_cargo_atividade_action"/>
        <field name="view_id" ref="hr_contract_change_cargo_atividade_tree"/>
    </record>

    <record model="ir.actions.act_window.view" id="hr_contract_change_cargo_atividade_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="hr_contract_change_cargo_atividade_action"/>
        <field name="view_id" ref="hr_contract_change_cargo_atividade_form"/>
    </record>

</data>
</openerp>
