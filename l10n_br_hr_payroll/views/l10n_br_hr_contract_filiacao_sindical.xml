<openerp>
<data>

    <record id="hr_contract_change_filiacao_sindical_form" model="ir.ui.view">
        <field name="name">hr.contract.change.form (filiacao sindical)</field>
        <field name="model">hr.contract.change</field>
        <field name="inherit_id" ref="hr_contract_change_form"/>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string" eval="Alterações contratuais: Filiação Sindical"/>
            </form>
            <field name="change_reason_id" position="before">
                <field name="union" attrs="{'readonly': [('state', '=', 'applied')],
                                            'invisible': [('change_type', '!=', 'filiacao-sindical')]}"/>
                <field name="union_entity_code" attrs="{'readonly': [('state', '=', 'applied')],
                                                        'invisible': [('change_type', '!=', 'filiacao-sindical')]}"/>
            </field>
            <field name="change_date" position="after">
                <field name="union_cnpj" attrs="{'readonly': [('state', '=', 'applied')],
                                                 'invisible': [('change_type', '!=', 'filiacao-sindical')]}"/>
                <field name="discount_union_contribution" attrs="{'readonly': [('state', '=', 'applied')],
                                                                  'invisible': [('change_type', '!=', 'filiacao-sindical')]}"/>
                <field name="month_base_date" attrs="{'readonly': [('state', '=', 'applied')],
                                                      'invisible': [('change_type', '!=', 'filiacao-sindical')]}"/>
            </field>
        </field>
    </record>

    <record id="hr_contract_change_filiacao_sindical_tree" model="ir.ui.view">
        <field name="name">hr.contract.change.tree (filiacao sindical)</field>
        <field name="model">hr.contract.change</field>
        <field name="arch" type="xml">
            <tree string="Alterações contratuais: Filiação Sindical">
                <field name="contract_id" required="True"/>
                <field name="change_date"/>
                <field name="change_reason_id"/>
                <field name="union"/>
                <field name="union_cnpj"/>
                <field name="union_entity_code"/>
                <field name="discount_union_contribution"/>
                <field name="month_base_date"/>
            </tree>
        </field>
    </record>

        <!--TODO: Definir contexto -->
    <record model="ir.actions.act_window" id="hr_contract_change_filiacao_sindical_action">
        <field name="name">Filiação Sindical</field>
        <field name="res_model">hr.contract.change</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('change_type','=','filiacao-sindical')]</field>
        <field name="context">{'search_default_current':1, 'default_change_type': 'filiacao-sindical'}</field>
    </record>

    <record model="ir.ui.menu" id="hr_contract_change_filiacao_sindical_menu">
        <field name="name">Filiação Sindical</field>
        <field name="parent_id" ref="hr_contract_change_menu"/>
        <field name="action" ref="hr_contract_change_filiacao_sindical_action"/>
        <field name="sequence" eval="4"/>
    </record>

        <record model="ir.actions.act_window.view" id="hr_contract_change_filiacao_sindical_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="hr_contract_change_filiacao_sindical_action"/>
        <field name="view_id" ref="hr_contract_change_filiacao_sindical_tree"/>
    </record>
    <record model="ir.actions.act_window.view" id="hr_contract_change_filiacao_sindical_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="hr_contract_change_filiacao_sindical_action"/>
        <field name="view_id" ref="hr_contract_change_filiacao_sindical_form"/>
    </record>

</data>
</openerp>
