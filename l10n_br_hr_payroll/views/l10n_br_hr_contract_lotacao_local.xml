<openerp>
<data>
    <record id="hr_contract_change_lotacao_local_form" model="ir.ui.view">
        <field name="name">hr.contract.change.form (lotacao/local)</field>
        <field name="model">hr.contract.change</field>
        <field name="inherit_id" ref="hr_contract_change_form"/>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string" eval="Alterações contratuais: Lotação/Local de Trabalho"/>
            </form>
            <field name="change_date" position="after">
                <field name="departamento_lotacao" attrs="{'readonly': [('state', '=', 'applied')],
                                           'invisible': [('change_type', '!=', 'lotacao-local')]}"/>
                <field name="lotacao_cliente_fornecedor" attrs="{'readonly': [('state', '=', 'applied')],
                                                  'invisible': [('change_type', '!=', 'lotacao-local')]}"/>
            </field>
        </field>
     </record>

     <record id="hr_contract_change_lotacao_local_tree" model="ir.ui.view">
            <field name="name">hr.contract.change.tree (lotacao/local)</field>
            <field name="model">hr.contract.change</field>
            <field name="arch" type="xml">
                <tree string="Alterações contratuais: Lotação/Local de Trabalho">
                    <field name="contract_id" required="True"/>
                    <field name="change_date"/>
                    <field name="change_reason_id"/>
                    <field name="departamento_lotacao"/>
                    <field name="lotacao_cliente_fornecedor"/>
                </tree>
            </field>
     </record>

        <!--TODO: Definir contexto -->
    <record model="ir.actions.act_window" id="hr_contract_change_lotacao_local_action">
        <field name="name">Lotação/Local de trabalho</field>
        <field name="res_model">hr.contract.change</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('change_type','=','lotacao-local')]</field>
        <field name="context">{'search_default_current':1, 'default_change_type': 'lotacao-local'}</field>
    </record>
    <record model="ir.actions.act_window.view" id="hr_contract_change_lotacao_local_action_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="hr_contract_change_lotacao_local_action"/>
        <field name="view_id" ref="hr_contract_change_lotacao_local_tree"/>
    </record>
    <record model="ir.actions.act_window.view" id="hr_contract_change_lotacao_local_action_form">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="hr_contract_change_lotacao_local_action"/>
        <field name="view_id" ref="hr_contract_change_lotacao_local_form"/>
    </record>

    <record model="ir.ui.menu" id="hr_contract_change_lotacao_local_menu">
        <field name="name">Lotação/Local de trabalho</field>
        <field name="parent_id" ref="hr_contract_change_menu"/>
        <field name="action" ref="hr_contract_change_lotacao_local_action"/>
        <field name="sequence" eval="5"/>
    </record>

</data>
</openerp>
