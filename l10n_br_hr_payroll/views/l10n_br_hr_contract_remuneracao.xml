<openerp>
<data>

     <record id="hr_contract_change_remuneracao_form" model="ir.ui.view">
        <field name="name">hr.contract.change.form (remuneracao)</field>
        <field name="model">hr.contract.change</field>
        <field name="inherit_id" ref="hr_contract_change_form"/>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="string" eval="Alterações contratuais: Remuneração"/>
            </form>
            <field name="change_reason_id" position="before">
                <field name="wage" attrs="{'readonly': [('state', '=', 'applied')],
                                           'invisible': [('change_type', '!=', 'remuneracao')]}"/>
            </field>
            <field name="change_date" position="after">
                <field name="struct_id" attrs="{'readonly': [('state', '=', 'applied')],
                                                'invisible': [('change_type', '!=', 'remuneracao')]}"/>
                <field name="salary_unit" attrs="{'readonly': [('state', '=', 'applied')],
                                                  'invisible': [('change_type', '!=', 'remuneracao')]}"/>
            </field>
        </field>
     </record>

     <record id="hr_contract_change_remuneracao_tree" model="ir.ui.view">
        <field name="name">hr.contract.change.tree (remuneracao)</field>
        <field name="model">hr.contract.change</field>
        <field name="arch" type="xml">
            <tree string="Alterações contratuais: Remuneração">
                <field name="contract_id"/>
                <field name="change_date"/>
                <field name="change_reason_id"/>
                <field name="wage"/>
                <field name="salary_unit"/>
                <field name="struct_id"/>
            </tree>
        </field>
     </record>

    <record model="ir.actions.act_window" id="hr_contract_change_remuneracao_action">
        <field name="name">Remuneração</field>
        <field name="res_model">hr.contract.change</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('change_type','=','remuneracao')]</field>
        <field name="context">{'search_default_current':1, 'default_change_type': 'remuneracao'}</field>
    </record>
    <record model="ir.actions.act_window.view" id="hr_contract_change_remuneracao_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="hr_contract_change_remuneracao_action"/>
        <field name="view_id" ref="hr_contract_change_remuneracao_tree"/>
    </record>
    <record model="ir.actions.act_window.view" id="hr_contract_change_remuneracao_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="hr_contract_change_remuneracao_action"/>
        <field name="view_id" ref="hr_contract_change_remuneracao_form"/>
    </record>
    <record model="ir.ui.menu" id="hr_contract_change_remuneracao_menu">
        <field name="name">Remuneração</field>
        <field name="parent_id" ref="hr_contract_change_menu"/>
        <field name="action" ref="hr_contract_change_remuneracao_action"/>
        <field name="sequence" eval="1"/>
    </record>

</data>
</openerp>
